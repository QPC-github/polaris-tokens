{
  "name": "polaris-tokens",
  "version": "0.5.2",
  "description": "Design Tokens for the Polaris Design System",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "clean": "rimraf ./dist",
    "predist": "yarn clean",
    "dist": "npm-run-all dist:**",
    "dist:gulp": "gulp",
    "dist:prettier": "prettier ./dist/*.{scss,css,json,js} --write",
    "dist:colors:prettier-sketchpalette": "prettier ./dist/*.sketchpalette --write --parser json",
    "dist:colors:ase": "node ./scripts/ase-encode.js",
    "dist:colors:clr": "ase2clr ./dist/colors.ase ./dist/colors.clr",
    "dist:colors:rename-palettes": "renamer --find colors --replace Polaris ./dist/colors.{ase,clr,sketchpalette}",
    "lint": "npm-run-all lint:**",
    "lint:js": "eslint . --format codeframe",
    "lint:tokens": "yamllint ./tokens/*.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/polaris-tokens.git"
  },
  "keywords": [
    "polaris",
    "design-tokens"
  ],
  "author": "Shopify",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/polaris-tokens/issues"
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/node",
      "plugin:shopify/esnext",
      "plugin:shopify/prettier"
    ],
    "rules": {
      "func-style": [
        "error",
        "declaration",
        {
          "allowArrowFunctions": true
        }
      ]
    }
  },
  "homepage": "https://github.com/Shopify/polaris-tokens#readme",
  "devDependencies": {
    "ase-util": "^1.0.1",
    "ase-utils": "^0.1.1",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-shopify": "^19.0.0",
    "gulp": "^3.9.1",
    "gulp-theo": "^1.0.0-beta.1",
    "jest": "^22.1.3",
    "lodash": "^4.17.4",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "renamer": "^0.6.1",
    "rimraf": "^2.6.2",
    "theo": "^6.0.0-beta.9",
    "tinycolor2": "^1.4.1",
    "yaml-lint": "^1.0.0"
  }
}
